<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whitecap.kaushikkyada.nicocashior.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_current_cp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Current CP: 0"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_emailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="12"
            android:hint="Enter Receiver's EmailId"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edt_cpamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:ems="12"
            android:hint="Enter CP Amount" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:hint="Enter your password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:text="Transfer Now" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Logout" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
